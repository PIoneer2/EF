@model IEnumerable<EF.Core.Data.Transactions>
@using EF.Web.Models

@{
    ViewBag.Title = "Transactions";
}

<h2>Transactions list</h2>

<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Transactions list</div>
    <div class="panel-body">
        <a id="createEditTransactionModal"
           href="@Url.Action("CreateEditTransaction")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span>&nbsp; Transaction
        </a>

        <table class="table" style="margin: 4px">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TranactionType.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    Action
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TranactionType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "CreateEditTransaction",
                        new { id = item.Id }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details",
                        new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete",
                        new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>