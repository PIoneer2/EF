    @using EF.Web.Models
    @model IEnumerable<EF.Core.Data.Goods>

    @{
        ViewBag.Title = "Index";
    }

<h2>Goods list</h2>

<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Goods list</div>
    <div class="panel-body">
        <a id="createEditTransactionModal"
           href="@Url.Action("CreateEditGood")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span>&nbsp; Good
        </a>

        <table class="table" style="margin: 4px">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Info)
                </th>
                <th>
                    Action
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Info)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "CreateEditGood",
                        new { id = item.ID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details",
                        new { id = item.ID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete",
                        new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
