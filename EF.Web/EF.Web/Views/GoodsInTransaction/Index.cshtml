@using EF.Web.Models
@model IEnumerable<EF.Core.Data.GoodsInTransaction>

@{
    ViewBag.Title = "GoodsInTransaction";
}

<h2>Goods In Transaction list</h2>

<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Goods In Transaction list</div>
    <div class="panel-body">
        <a id="createEditGoodsInTransactionModal"
           href="@Url.Action("CreateEditGoodsInTransaction")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span>&nbsp; Goods in transaction
        </a>

        <table class="table" style="margin: 4px">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionsId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GoodsId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    Action
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionsId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoodsId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "CreateEditGoodsInTransaction",
                        new { id = item.ID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details",
                        new { id = item.ID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete",
                        new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>